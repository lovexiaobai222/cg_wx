.cg-apply-form {
  height: 100vh;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

/* 下拉框 */
.picker-view {
  display: flex;
}
.picker-view-label {
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  padding: 2rpx 12rpx;
}
.del-btn{
  color: rgb(255, 85, 0);
}

/* 弹框 */
.add-btn {
  color: #52c41a !important;
  font-size: 36rpx !important;
  margin-top: 8rpx;
}
.dialog-header{
  font-size: 32rpx !important;
  padding-top: 16rpx !important;
  border-bottom: 1rpx solid #eaeaea;
}
.dialog-content{
  padding: 40rpx 0 0!important;
}
.dialog-content .form-item{
  margin-bottom: 20rpx;
}
.dialog-content .form-item .label{
  width:35%;
}
.my-select, 
.my-input{
  width: 240rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  text-align: left;
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  padding: 2rpx 12rpx;
  position: relative;
}
.my-select .my-select-arrow{
  color: #eaeaea;
  position: absolute;
  right: 4rpx;
  top:6rpx;
}
.dialog-add-btn{
  display: flex;
  justify-content: center;
  font-size: 32rpx !important;
  color: #fff;
  background: linear-gradient(212deg, rgba(107, 103, 246, 1) 0%, rgba(68, 171, 237, 1) 100%);
  border-radius: 0;
  margin-top: 40rpx;
}