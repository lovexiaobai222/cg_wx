/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}



/*单行省略*/
.single-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 固定底部保存按钮*/
.fixed-bottom-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  background: linear-gradient(212deg, rgba(107, 103, 246, 1) 0%, rgba(68, 171, 237, 1) 100%);
  box-shadow: 0 4rpx 20rpx 0 rgba(83, 147, 241, 1);
  border-radius: 0;
}

/* 通用表单样式 */
.common-form .form-item {
  display: flex;
  align-items: center;
  padding: 8rpx 10rpx;
}
.common-form .form-item .label{
  width:40%;
  text-align: right;
  color: #000;
  white-space: nowrap;
  font-size: 28rpx;
  margin-right: 12rpx;
}
.common-form .form-item .value{
  color: #666;
  font-size: 28rpx;
}

/* 通用table样式 */
.table {
  border: 1rpx solid #eaeaea;
  margin-top: 20rpx;
}

.tr {
  width: 100%;
  display: flex;
}

.th {
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  background: #36f;
  color: #fff;
  font-size: 28rpx;
  border-right: 1rpx solid #eaeaea;
  padding: 12rpx 0;
}

.th:last-child, .td:last-child {
  border-right: none;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  border-right: 1rpx solid #eaeaea;
  border-top: 1rpx solid #eaeaea;
  padding: 12rpx 0;
}